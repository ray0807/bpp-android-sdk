<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xmtj.bgptest.MainActivity">

    <Button
        android:id="@+id/btn_bpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BPG image loader" />

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="normal image loader" />

    <Button
        android:id="@+id/btn_normal_bpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="normal and bpg image loader" />

    <Button
        android:id="@+id/btn_load_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="load special url" />

    <Button
        android:id="@+id/btn_bpg_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BPG viewer(50K每张图)" />

    <Button
        android:id="@+id/btn_jpg_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JPG viewer（500K每张图）" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:text="1.使用此图片下载框架，请引用bgpdecoder-release.aar 作为解码器\n2.本例中使用的图片框架为Android-Universal-Image-Loader，其使用的基本配置请查看 https://github.com/nostra13/Android-Universal-Image-Loader\n3.也可以使用其他或者自定义图片显示框架，只需要自定义解码器即可，请参考demo中的BpgImageDecoder，以及Application中的注册方式。 " />
</LinearLayout>
